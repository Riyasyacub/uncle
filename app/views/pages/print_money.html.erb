<style>

.watermark {
  position: fixed;
  font-size: 80px;
  font-weight: 700;
  letter-spacing: 5px;
  color: rgba(157,162,166,0.6);

  top: 25%;
  transform: translateX(100%) rotate(-45deg);
}
</style>
<div class="row" ><span class="col-10" ></span><button type="button" class="col-1 float-right" onclick="printDiv('printarea')">Print</button><%= link_to "Home", root_path, class: "col-1 btn btn-info" %></div></div>
<div id ="printarea" >
  <div >
  <% if @format == "1" %>
    <div class="watermark" >REPRINT</div>
  <% end %>
    <div class="d-flex justify-content-center align-items-center" >
      <h1>Alnafis Tours and Travels</h1>
    </div>
    
      <div class="d-flex justify-content-center " >7E, 1st Floor, Opp Canara Bank,</div>
      <div class="d-flex justify-content-center " >  Sundara Vinayagar  Kovil Street, Kallakurichi -606202</div>
    
    <div class="d-flex justify-content-center " ><b class="px-3">Contact: </b> 9943799766, 9943733766 </div>
    <br>
    <h3 class=" d-flex justify-content-center "><%= @money.company %></h3>
    <div class="row" >
<span class="col-9 col-sm-9 col-md-9 col-xl-9" ></span>
<span class="col-3 col-sm-3 col-md-3 col-xl-3" ><b>Date : </b><%= @money.created_at.strftime('%d-%m-%Y') %></span>
</div>
    
  </div>
  <div>
<div style="padding: 30px;">
  <table class="table table-bordered" >
    <thead>
    <tr>
      <th scope="col" >Name</th>
      <th scope="col" >Country</th>
      <th scope="col" >From</th>
      <th scope="col" >Amount</th>
    </tr>
    </thead>
    <tbody>
      <tr>
      <td scope="row" ><%= @money.name %></td>
      <td><%= @money.country %></td>
      <td><%= @money.from %></td>
      <td>₹<%= "%.2f"%@money.amount %></td>
      </tr>
      <tr class="table-success" >
      <td scope="row"></td>
      <td></td>
      <td>Total Amount</td>
      <td>₹<%= "%.2f"%@money.amount %></td>
      </tr>
    </tbody>
    
</div>
</div>

</div>



<script>
function printDiv(divName) {
     var printContents = document.getElementById(divName).innerHTML;
     var originalContents = document.body.innerHTML;
      
     document.body.innerHTML = printContents + `<style>

.watermark {
  position: fixed;
  font-size: 80px;
  font-weight: 700;
  letter-spacing: 5px;
  color: rgba(157,162,166,0.4);

  top: 20%;
  transform: translateX(50%) rotate(-45deg);
}
</style>`;
   
     window.print();

     document.body.innerHTML = originalContents;
}
</script>